{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@typedefs/*":  ["../types/*"]
        },
    },
    "include": [
        "./src/**/*",
        "../types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
