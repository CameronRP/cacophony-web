{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@api/*": ["src/api/*"],
            "@api": ["src/api/index.ts"],
            "@typedefs/*":  ["../types/*"],
        },
    },
    "include": [
        "./src/**/*",
        "../types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
