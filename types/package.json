{
    "name": "cacophony-types",
    "version": "1.0.0",
    "scripts": {
        "generate-schemas": "tsc && node build-schemas.js",
        "lint": "eslint ./ --ext .ts,.js && (npx prettier --check ./**/*.ts ./**/*.js || (echo \"Please run 'npm lint:fix' to clean up formatting of files.\"; false))",
        "lint:fix": "eslint ./ --fix --ext .ts,.js && npx prettier --write ./**/*.ts ./**/*.js"
    },
    "dependencies": {
        "recursive-readdir": "^2.2.2",
        "ts-json-schema-generator": "^0.95.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-utils": "^3.0.0",
        "prettier": "^2.3.2",
        "@tsconfig/node14": "^1.0.1",
        "@types/node": "^16.7.1",
        "@types/recursive-readdir": "^2.2.0"
    }
}
