{
    "compilerOptions": {
        "strictNullChecks": false,
        "target": "es2018",
        "sourceMap": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@typedefs/*":  ["../types/*"]
        }
    },
    "include": [
        "./models/**/*.ts",
        "./api/**/*.ts",
        "./scripts/**/*.ts",
        "./**/*.ts",
        "../types/**/*.ts",
        "../types/**/*.json"
    ],

    "exclude": [
        "./node_modules/*",
        "./test/*",
        "./test-cypress/*"
    ]
}
